<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Bakbak+One&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/public/style.css">
    <title>sportaiment</title>
</head>

<body onload="navbarVisitPageBlog()">

       <nav>

        <div class="logo">
            <a href="">
                SPORTAIMENT
            </a>
        </div>
        <div id="contact" class="contact">
            <a id="contact-navbar" href="/contactForm">
                Contact Me
            </a>
        </div>
        <div id="navbar-list" class="navbar-list">
            <a id="blog-navbar" class="a-blog text-blog" href="/blog-list">
                Blog
            </a>
            <a id="img-navbar" href="/">
                <img src="/public/assets/home-5-32.png" alt="">
            </a>
        </div>
        {{#if isLogin}}
        <div class="name-logout">
            <div class="name-user">
                <a href="">{{user.name}}</a>
            </div>
            <div class="logout">
                <a href="/logout">Logout</a>
            </div>
        </div>
        {{else}}
        <div class="registrasi-login">
            <div class="login">
                <a href="/login">Login</a>
            </div>
            <div class="register">
                <a href="/register">Registrasi</a>
            </div>
        </div>
        {{/if}}

    </nav>

    {{#if messages.success}}
        <div class="alert alert-success" role="alert">
            {{messages.success}}
        </div>
    {{/if}}

    <div class="blog">

        <div id="contents" class="blog-list">
            {{#if isLogin}}
            <div class="btn-post">
                <a href="/add-blog">Post Blog</a>
            </div>
            {{/if}}
            {{#each blogs}}
            <div class="blog-list-item">
                    <div class="blog-image">
                        <img src="/uploads/{{this.image}}" alt="" />
                    </div>
                    <div class="blog-content">
                        {{#if this.isLogin}}
                        <div class="btn-group">
                            <button class="btn-edit"><a href="/edit-blog/{{this.id}}">Edit Blog</a></button>
                            <button class="btn-delete"><a href="/delete-blog/{{id}}">Delete Blog</a></button>
                        </div>
                        {{/if}}
                        <h1>
                            <a href="/blog-detail/{{this.id}}" target="_blank">{{this.title}}</a>
                        </h1>
                        <div class="detail-blog-content">
                            {{this.postdate}} | {{this.author}}
                        </div>
                        <p>{{this.content}}</p>
                        <p class="time-distance">{{this.postDistance}}</p>
                    </div>
            </div>
            {{/each}}
        </div>


        <script src="index.js"></script>
</body>

</html>